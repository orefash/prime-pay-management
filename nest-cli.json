{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/merchant-app/src",
  "compilerOptions": {
    "webpack": true,
    "assets": [
      "**/*.hbs"
    ],
    "watchAssets": true,
    "tsConfigPath": "apps/merchant-app/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/merchant-app",
  "projects": {
    "merchant-app": {
      "type": "application",
      "root": "apps/merchant-app",
      "entryFile": "main",
      "sourceRoot": "apps/merchant-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/merchant-app/tsconfig.app.json"
      }
    },
    "agent-app": {
      "type": "application",
      "root": "apps/agent-app",
      "entryFile": "main",
      "sourceRoot": "apps/agent-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/agent-app/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    },
    "db-lib": {
      "type": "library",
      "root": "libs/db-lib",
      "entryFile": "index",
      "sourceRoot": "libs/db-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/db-lib/tsconfig.lib.json"
      }
    },
    "utils": {
      "type": "library",
      "root": "libs/utils",
      "entryFile": "index",
      "sourceRoot": "libs/utils/src",
      "compilerOptions": {
        "tsConfigPath": "libs/utils/tsconfig.lib.json"
      }
    }
  }
}